<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:clipChildren="false"
    tools:context=".NewsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/newsContainer"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/newsItemOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="8dp"
            android:animateLayoutChanges="true"
            android:maxWidth="300dp"
            android:maxHeight="300dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/newsItemThree"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="News Item TWO\n its really really long and filled with stuff" />

        <TextView
            android:id="@+id/newsItemTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:animateLayoutChanges="true"
            android:maxWidth="400dp"
            android:maxHeight="300dp"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@id/newsItemOne"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="News Item TWO\n its really really long and filled with stuff" />

        <TextView
            android:id="@+id/newsItemThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="8dp"
            android:animateLayoutChanges="true"
            android:maxHeight="300dp"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/newsItemFour"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/newsItemTwo"
            tools:text="News Item THREE\n its really really long and filled with stuff" />

        <TextView
            android:id="@+id/newsItemFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="8dp"
            android:animateLayoutChanges="true"
            android:maxWidth="300dp"
            android:maxHeight="400dp"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="News Item FOUR\n its really really long and filled with stuff" />

        <TextView
            android:id="@+id/newsItemFive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:animateLayoutChanges="true"
            android:maxWidth="400dp"
            android:maxHeight="300dp"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/newsItemFour"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/newsItemThree"
            tools:text="News Item FIVE\n its really really long and filled with stuff" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>